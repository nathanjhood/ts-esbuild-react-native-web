{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "tsx",
  // https://tsx.is/typescript#recommendation
  // Here's the recommended configuration to make type-checking behave
  // consistently.
  "compilerOptions": {
    // Treat files as modules even if it doesn't use import/export
    "moduleDetection": "force",
    // Ignore module structure
    "module": "Preserve",
    // Allow JSON modules to be imported
    "resolveJsonModule": true,
    // Allow JS files to be imported from TS and vice versa
    "allowJs": true,
    // Use correct ESM import behavior
    "esModuleInterop": true,
    // Disallow features that require cross-file awareness
    "isolatedModules": true,
    // It's also recommended to enable verbatimModuleSyntax which requires you
    // to write your type imports & exports using explicit syntax.
    // Refactoring may be necessary.
    "verbatimModuleSyntax": true,
    // custom/required:
    // The below options were inferred by further usage of the suggestions above
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsx.tsbuildinfo",
    "outDir": "./build",
    "baseUrl": "./",
    "noImplicitAny": false,
    "jsx": "react",
    "rootDirs": [
      "(?:^|/)"
    ]
  },
  "include": [
    "./app.json"
  ],
  "exclude": [
    "./node_modules/",
    "./dist/",
    "./build/"
  ]
}
