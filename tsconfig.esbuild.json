{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "esbuild",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.esbuild.tsbuildinfo",
    "jsx": "react-jsx",
    "module": "NodeNext",
    "outDir": "./build",
    "baseUrl": "./",
    "rootDirs": [
      "(?:^|/)config/",
      "(?:^|/)scripts/"
    ]
  },
  "include": [
    "config/",
    "scripts/"
  ],
  "exclude": [
    "(?:^|/)node_modules/",
    "(?:^|/)dist/",
    "(?:^|/)build/",
  ]
}
