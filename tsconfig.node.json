{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "node",
  "extends": [
    "@tsconfig/node20/tsconfig.json"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "resolveJsonModule": true,
    "outDir": "./build",
    "baseUrl": "./"
  },
  "exclude": [
    "(?:^|/)node_modules/",
    "(?:^|/)dist/",
    "(?:^|/)build/",
  ]
}
